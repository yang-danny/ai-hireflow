      "@fastify/jwt": "^7.2.3",
      "@fastify/oauth2": "^7.4.0",
      "@fastify/rate-limit": "^8.1.1",
      "@sentry/node": "^10.27.0",
      "@sentry/profiling-node": "^10.27.0",
      "axios-retry": "^4.5.0",
      "bcrypt": "^5.1.1",
