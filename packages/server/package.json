   "description": "AI-HireFlow Backend API with Fastify and TypeScript (ESM)",
   "main": "dist/server.js",
   "type": "module",
   "scripts": {
      "dev": "tsx watch src/server.ts",
      "dev:nodemon": "nodemon",
      "build": "tsc",
      "start": "node dist/server.js",
      "clean": "rm -rf dist",
      "type-check": "tsc --noEmit",
